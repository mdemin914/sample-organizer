{
  "name": "sample-organizer",
  "version": "1.0.0",
  "description": "A cross-platform desktop app to organize musical samples",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:renderer": "react-scripts start",
    "start:electron": "electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "react-scripts build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "music",
    "samples",
    "organizer"
  ],
  "author": "Sample Organizer",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.3.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.0",
    "@mui/icons-material": "^5.15.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.sampleorganizer.app",
    "productName": "Sample Organizer",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}